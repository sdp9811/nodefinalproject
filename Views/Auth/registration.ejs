<html>
    <head>
        <meta charset="utf-8">
        <title> <%=title_reg %> </title>
        <%- include('../Includes/header.ejs') %>
        <link   rel="stylesheet" href="/Style.css">
    </head>
    <body>
        <%- include('../Includes/navigation.ejs') %>
    	<div class="center">
            <h1>SignUp</h1>
            <form method="POST" action="/regValue" autoComplete="off" >
                <input type="hidden" value="<%=csrf%>" name="_csrf">
                <div class="txt-field">
                    <input type="text" name="fname">
                    <label>First Name</label>
                </div>
                <div class="txt-field">
                    <input type="text" name="lname">
                    <label>Last Name</label>
                </div>
                <div class="txt-field">
                    <input type="email" name="email">
                    <label>Email</label>
                    <%if(errorMsg){%>
                        <div class="errmsg"> <p> <%=errorMsg%></p> </div>
                        <%}%>
                </div>
            <div class="txt-field">
                    <input type="text" name="psd">
                    <label>Password</label>
                </div>
                <div>
                    <%if(error.length>0) {%>
                        <%for(let err of error) {%>
                            <div> <h6 style="color: chocolate;"><%=err.msg%></h6></div>
                            <%}%>
                            <%}%>
                </div>
                <input type="submit" value="SignUp">
                <div class="signup-link"> Already signed up? 
               <a href="/lgnFrm"> Sign In </a>
                </div>
            </form>
        </div>
    
    <%- include('../Includes/footer.ejs') %>
    </body>
</html>